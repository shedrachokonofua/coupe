---
// Dynamic blog post page - SSG for better performance
export const prerender = true;

import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Generate all possible paths for static generation
export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map(post => ({
    params: { slug: post.slug }
  }));
}

// Get the slug from the URL
const { slug } = Astro.params;

// Get the post data
const posts = await getCollection('posts');
const post = posts.find(p => p.slug === slug);

// If post doesn't exist, return 404
if (!post) {
  return Astro.redirect('/404');
}

// Render the post content
const { Content } = await post.render();
---

<Layout
  title={`${post.data.title} - Blog`}
  description={post.data.excerpt}
>
  <article>
    <header class="post-header">
      <div class="meta">
        <time>{post.data.date}</time>
        <span>{post.data.author}</span>
        <span>{post.data.readTime}</span>
        <span class="rendering-type">SSG</span>
      </div>

      <h1>{post.data.title}</h1>

      <div class="tags">
        {post.data.tags.map((tag) => (
          <span class="tag">{tag}</span>
        ))}
      </div>
    </header>

    <div class="content">
      <Content />
    </div>

    <footer class="post-footer">
      <a href="/" class="back-link">‚Üê Back to Blog</a>
    </footer>
  </article>
</Layout>

<style>
  article {
    max-width: 700px;
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #e9ecef;
  }

  .meta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1rem;
    font-size: 0.8rem;
    opacity: 0.7;
    color: #6c757d;
  }

  h1 {
    font-size: 2rem;
    margin: 0 0 1rem 0;
    color: #2c3e50;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: #e9ecef;
    color: #495057;
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.7rem;
  }

  .content {
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .content :global(h2) {
    color: #3498db;
    margin: 2rem 0 1rem 0;
    border-bottom: 1px solid #e9ecef;
    padding-bottom: 0.5rem;
  }

  .content :global(h3) {
    color: #3498db;
    margin: 1.5rem 0 1rem 0;
  }

  .content :global(ul) {
    margin: 1rem 0;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .content :global(blockquote) {
    border-left: 3px solid #3498db;
    padding-left: 1rem;
    margin: 1.5rem 0;
    font-style: italic;
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 4px;
  }

  .content :global(pre) {
    background: #f8f9fa;
    padding: 1rem;
    border-radius: 4px;
    border: 1px solid #e9ecef;
    overflow-x: auto;
    margin: 1rem 0;
  }

  .content :global(code) {
    font-family: 'Courier New', monospace;
    font-size: 0.9rem;
    background: #f8f9fa;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    border: 1px solid #e9ecef;
  }

  .content :global(pre code) {
    background: none;
    padding: 0;
    border: none;
  }

  .content :global(p) {
    margin-bottom: 1rem;
    color: #495057;
  }

  .content :global(strong) {
    color: #2c3e50;
  }

  .post-footer {
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #e9ecef;
  }

  .back-link {
    color: #3498db;
    text-decoration: none;
    padding: 0.5rem 1rem;
    background: #f8f9fa;
    border-radius: 4px;
    border: 1px solid #e9ecef;
  }

  .back-link:hover {
    background: #e9ecef;
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 1.5rem;
    }

    .meta {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style>
