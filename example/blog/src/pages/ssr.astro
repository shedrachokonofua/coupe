---
// This page uses SSR (Server-Side Rendering)
export const prerender = false;

import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const now = new Date().toISOString();
const requestId = Math.random().toString(36).substr(2, 6);

const posts = await getCollection('posts');
const stats = Astro.locals.stats || { uniqueVisitors: 0, uptime: '0h 0m' };

const userAgent = Astro.request.headers.get('user-agent') || 'Unknown';
const isMobile = /Mobile|Android|iP(hone|od|ad)/.test(userAgent);
---

<Layout title="SSR Demo" description="Server-side rendering demo">
  <h1>SSR Demo</h1>
  <p>This page is rendered on the server for each request.</p>

  <section class="stats">
    <h2>Live Stats</h2>
    <div class="stat-grid">
      <div class="stat">
        <strong>{stats.uniqueVisitors}</strong>
        <span>Unique Visitors</span>
      </div>
      <div class="stat">
        <strong>{posts.length}</strong>
        <span>Posts</span>
      </div>
      <div class="stat">
        <strong>{stats.uptime}</strong>
        <span>Uptime</span>
      </div>
    </div>
  </section>

  <section class="info">
    <h2>Request Info</h2>
    <p><strong>Time:</strong> {now}</p>
    <p><strong>Request ID:</strong> {requestId}</p>
    <p><strong>Device:</strong> {isMobile ? 'Mobile' : 'Desktop'}</p>
  </section>

  <button onclick="location.reload()" class="refresh-btn">
    Refresh Page
  </button>
</Layout>

<style>
  h1 {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  h2 {
    color: #3498db;
    margin: 2rem 0 1rem 0;
  }

  .stats, .info {
    background: #f8f9fa;
    padding: 1.5rem;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .stat-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .stat {
    text-align: center;
    padding: 1rem;
    background: white;
    border-radius: 4px;
  }

  .stat strong {
    display: block;
    font-size: 1.5rem;
    color: #3498db;
    margin-bottom: 0.5rem;
  }

  .stat span {
    font-size: 0.9rem;
    color: #6c757d;
  }

  .refresh-btn {
    background: #3498db;
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }

  .refresh-btn:hover {
    background: #2980b9;
  }

  strong {
    color: #2c3e50;
  }
</style>
